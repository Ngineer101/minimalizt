---
import HeaderLink from "./HeaderLink.astro";
import ThemeToggle from "./ThemeToggle.astro";
import { SITE_TITLE } from "../consts";
---

<header transition:name="site-header" transition:persist>
  <nav>
    <div class="nav-start">
      <h2>
        <a href="/" class="flex flex-row items-center gap-2">
          <img src="/logo.jpg" width="48" height="48" alt="Minimalizt logo" />
          <span class="text-2xl">{SITE_TITLE}</span>
        </a>
      </h2>
      <div class="internal-links">
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
      </div>
    </div>
    <div class="nav-end">
      <div class="theme-toggle-wrapper">
        <ThemeToggle />
      </div>
      <div class="social-links">
        <a href="https://x.com/nwbotha" target="_blank">
          <span class="sr-only">Follow on X</span>
          <svg
            width="24"
            height="24"
            viewBox="0 0 1200 1227"
            fill="#000"
            xmlns="http://www.w3.org/2000/svg"
            astro-icon="social/x"
          >
            <path
              fill="currentColor"
              d="M714.163 519.284L1160.89 0H1055.03L667.137 450.887L357.328 0H0L468.492 681.821L0 1226.37H105.866L515.491 750.218L842.672 1226.37H1200L714.137 519.284H714.163ZM569.165 687.828L521.697 619.934L144.011 79.6944H306.615L611.412 515.685L658.88 583.579L1055.08 1150.3H892.476L569.165 687.854V687.828Z"
            ></path>
          </svg>
        </a>
        <a href="https://github.com/Ngineer101" target="_blank">
          <span class="sr-only">Go to GitHub repo</span>
          <svg
            viewBox="0 0 16 16"
            aria-hidden="true"
            width="24"
            height="24"
            astro-icon="social/github"
            ><path
              fill="currentColor"
              d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
            ></path></svg
          >
        </a>
        <a href="https://www.linkedin.com/in/nico-botha" target="_blank">
          <span class="sr-only">Go to LinkedIn profile</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-linkedin"
          >
            <path
              d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
            ></path>
            <rect width="4" height="12" x="2" y="9"></rect>
            <circle cx="4" cy="4" r="2"></circle>
          </svg>
        </a>
      </div>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: var(--bg-primary);
    opacity: 0.9;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
    transition: background-color 0.3s ease;
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--text-primary);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--text-primary);
  }
  .social-links {
    display: flex;
    align-items: center;
    gap: 0.5em;
  }
  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-primary);
    padding: 0;
    transition: color 0.2s ease;
  }
  .social-links svg {
    width: 24px;
    height: 24px;
  }
  .internal-links {
    margin-left: 32px;
  }
  .nav-start {
    display: flex;
    align-items: center;
    width: auto;
  }
  .nav-end {
    display: flex;
    align-items: center;
    gap: 1em;
  }

  .theme-toggle-wrapper {
    display: flex;
    align-items: center;
  }

  /* Mobile adjustments */
  @media (max-width: 720px) {
    header {
      padding: 0 0.75em;
    }

    nav {
      flex-wrap: wrap;
      padding: 0.5em 0;
    }

    h2 {
      width: auto;
      flex: 0 1 auto;
    }

    h2 span.text-2xl {
      font-size: 1.25rem;
    }

    .internal-links {
      order: 3;
      width: 100%;
      margin-top: 0.5em;
      margin-left: 0;
      display: flex;
      justify-content: center;
    }

    .social-links {
      display: none;
    }

    .nav-end {
      gap: 0.5em;
      margin-left: auto;
    }

    .nav-start {
      display: flex;
      align-items: center;
      width: auto;
      flex: 1;
    }
  }

  @media (max-width: 480px) {
    nav a {
      padding: 0.75em 0.4em;
    }

    h2 img {
      width: 36px;
      height: 36px;
    }

    h2 span.text-2xl {
      font-size: 1.1rem;
    }
  }
</style>
